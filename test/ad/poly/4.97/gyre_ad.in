&constants
/

&model
	model_type = 'POLY'
	file = 'poly.h5'
/

&mode
	l = 0
	tag = 'l=0'
/

&mode
	l = 1
	tag = 'l=1'
/

&mode
	l = 2
	tag = 'l=2'
/

&mode
	l = 3
	tag = 'l=3'
/

&osc
	variables_type = 'JCD'
	inertia_norm_type = 'RADIAL'
/

&num
	ivp_solver = 'MAGNUS_GL6'
/

&scan
        grid_type = 'LINEAR'
        freq_min = 10.
        freq_max = 11.
        n_freq = 50
        tag_list = 'l=0'
/

&scan
        grid_type = 'INVERSE'
        freq_min = 2.
        freq_max = 3.
        n_freq = 1000
        tag_list = 'l=1'
/

&scan
        grid_type = 'INVERSE'
        freq_min = 2.
        freq_max = 3.
        n_freq = 1000
        tag_list = 'l=2'
/

&shoot_grid
        op_type = 'CREATE_CLONE'
/

&shoot_grid
        op_type = 'RESAMP_DISPERSION'
        alpha_osc = 5
        alpha_exp = 1
/

&shoot_grid
        op_type = 'RESAMP_CENTER'
        n = 10
/

&recon_grid
/

&output
	summary_file = 'gyre_ad.txt'
	summary_file_format = 'TXT'
	summary_item_list = 'l,n_pg,n_p,n_g,omega,E_norm'
/
