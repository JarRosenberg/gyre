&constants
/

&model
	model_type = 'EVOL'
	file = 'bcep.mesa'
	file_format = 'MESA'
/

&mode
	l = 0
/

&mode
	l = 1
/

&mode
	l = 2
/

&mode
	l = 3
/

&osc
	nonadiabatic = .TRUE.
/

&num
	diff_scheme = 'COLLOC_GL4'
/

&scan
	grid_type = 'LINEAR'
	freq_min = 1
	freq_max = 20.0
	n_freq = 200
/

&grid
	base_type = 'MODEL'
	n_center = 5
	alpha_osc = 10
	alpha_exp = 2
/

&output
	summary_file = ''
	stage_list = 'ad'
/

&output
	summary_file = 'summary.txt'
	summary_file_format = 'TXT'
	summary_item_list = 'l,n_pg,n_p,n_g,omega,omega_int'
	stage_list = 'nad'
/
